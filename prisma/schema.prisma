generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int            @id @default(autoincrement())
  clerkId          String?        @unique
  createdAt        DateTime       @default(now())
  email            String         @unique
  emailVerified    DateTime?
  name             String?
  image            String?
  password         String?
  countryCode      Int?
  isVerified       Boolean        @default(false)
  phoneNumber      String?        @unique
  otp              Int?
  otpExpiresAt     DateTime?
  role             Role           @default(USER)
  subscriptionPlan String?        @default("free")
  Account          Account[]
  scripts          Script[]
  Session          Session[]
  voiceProfiles    VoiceProfile[]
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Script {
  id                String        @id @default(cuid())
  projectName       String
  language          String
  content           String
  fileName          String?
  fileSize          Int?
  fileType          String?
  uploadMode        String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  audioFileName     String?
  audioFileSize     Int?
  audioFileUrl      String?
  audioGenerated    Boolean       @default(false)
  elevenLabsVoiceId String?
  audioSettings     Json?
  userId            Int
  voiceProfileId    String?
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  voiceProfile      VoiceProfile? @relation(fields: [voiceProfileId], references: [id])

  @@map("scripts")
}

model VoiceProfile {
  id        String    @id @default(cuid())
  name      String
  gender    Gender
  ageGroup  AgeGroup
  language  String
  voiceMood VoiceMood
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  scripts   Script[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("voice_profiles")
}

enum Gender {
  MALE
  FEMALE
  KID
}

enum AgeGroup {
  CHILD
  TEENAGER
  YOUNG_ADULT
  ELDERLY_45_65
  OLD_70_PLUS
}

enum VoiceMood {
  ANGRY
  HAPPY
  ANXIOUS
  DRAMA
  SURPRISED
  SCARED
  LAX
  SAD
  EXCITED
  DISAPPOINTED
  STRICT
}

enum Role {
  USER
  ADMIN
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model EarlyAccess {
  id    String @id @default(cuid())
  email String @unique
}

model Blog {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  excerpt    String
  content    String   @db.Text
  coverImage String
  category   String
  authorName String
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("blogs")
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  read      Boolean  @default(false)
  userId    Int
  createdAt DateTime @default(now())

  @@map("notifications")
}

model VoicePreview {
  id            String   @id @default(cuid())
  voiceId       String   @unique
  voiceName     String
  previewText   String
  audioFileUrl  String?
  audioFileName String?
  audioFileSize Int?
  isGenerated   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("voice_previews")
}
